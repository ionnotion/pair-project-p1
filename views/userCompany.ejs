<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>tes</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        .verticalLine {
          border-left: 0.3vw solid #343434;
          height: 100vh;
        }
        div.ex4 {
        width: 100%;
        height: 39vh;
        overflow: auto;
        }
      </style>
</head>
<body>
    <div class="d-flex"> 
        <div class="d-flex" style="width: 25%;"> 
            <%- include('partials/sideNav.ejs') %>
            <div class="verticalLine"></div>
        </div>
        <div style="width: 75%;"> 
            <div style="height: 10vh;width: 100%;" class="container bg-secondary"> 
              <h3 style="font-weight: 400;color: white;" class=" position-absolute top-0 mt-4 px-5">
                Company List
              </h3>
              <form class="d-flex position-absolute top-0 end-0 mt-4 px-5">
                <input class="form-control me-2" type="search" placeholder="Search company" aria-label="Search" name="search">
                <button class="btn btn-primary" type="submit">Search</button>
              </form>
              </div>
              <div class="chart-container" style="position: absolute; width: 40vw;">
                <canvas id="myChart"></canvas>
              </div>
              <div class="ex4"> 
                <table class="table table-hover position-absolute top-50 ms-5" style="width: 65%;"  >
                        <thead>
                            <tr>
                                <th scope="col">No.</th>
                                <th scope="col">Name</th>
                                <th scope="col">Field</th>
                                <th scope="col">Stock</th>
                                <th scope="col">Price</th>
                                <th scope="col">Lot</th>
                              </tr>
                            </thead>
                        <tbody .table-hover>
                          <% data.forEach((el,i)=>{ %>
                            <tr>
                              <th scope="row"><%= i+1 %></th>
                              <td><%= el.name %></td>
                              <td><%= el.field %></td>
                              <td><%= el.Stock.name %></td>
                              <td><%= el.Stock.price %></td>
                              <td><%= el.Stock.totalLots %></td>
                            </tr>
                          <% }) %> 
                          </tbody>
                          </div>
                    </table>
              </div>
            </div>
        </div>
    </div>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
<script>
  const labels = [
    'Technology',
    'Consumer Services',
    'Capital Goods',
    'Health Care',
    ];

  const data = {
    labels: labels,
    datasets: [{
      label: "Company's Fields",
      backgroundColor: [
                'rgba(255, 99, 132, 0.2)',
                'rgba(54, 162, 235, 0.2)',
                'rgba(255, 206, 86, 0.2)',
                'rgba(75, 192, 192, 0.2)'],
      borderColor: [
                'rgba(255, 99, 132, 0.2)',
                'rgba(54, 162, 235, 0.2)',
                'rgba(255, 206, 86, 0.2)',
                'rgba(75, 192, 192, 0.2)'],
      data: [1,1,2,1],
    }]
  };

  const config = {
    type: 'bar',
    data: data,
    options: {}
  };
</script>
<script>
  const myChart = new Chart(
    document.getElementById('myChart'),
    config
  );
</script>
</html>